<% content_for(:page) { 'new-report' } %>

<h1>New Report</h1>

<%= form_with(model: @report, local: true, multipart: true, class: 'report-form') do |form| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% @report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="uploads">
    <div class="upload">
      <label for="nbs_file">Upload NBS CSV</label>
      <%= file_field_tag 'nbs_file' %>
    </div>

    <div class="upload">
      <label for="ovrs_file">Upload OVRS CSV</label>
      <%= file_field_tag 'ovrs_file' %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: 'action' %>
  </div>
<% end %>

<%= link_to 'Main', root_path %>
<%= link_to 'Report history', reports_path %>
