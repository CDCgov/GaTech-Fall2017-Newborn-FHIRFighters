<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>Report Type</th>
      <th>Recency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.type %></td>
        <td><%= time_ago_in_words report.created_at %></td>
        <td><%= link_to 'Show', report %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Main', root_path %>
<%= link_to 'Create New Report', new_report_path %>
<%= link_to 'Latest Report', latest_reports_path %>
