<!DOCTYPE html>
<html>
  <head>
    <title>Artemis</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= yield(:page) || 'default' %>-page">
    <p id="alert"><%= alert %></p>
    <p id="notice"><%= notice %></p>

    <%= yield %>
  </body>
</html>
